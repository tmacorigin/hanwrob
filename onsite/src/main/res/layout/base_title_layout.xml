<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y138"
        android:background="@color/layout_title_bg" >


        <ImageView
            android:id="@+id/base_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x54"
            />

        <TextView
            android:id="@+id/base_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_detail"
            android:textSize="@dimen/x60"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/network_hint_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disconnect"
            android:textColor="@color/white"
            android:textSize="@dimen/x60"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/base_tv"
            android:visibility="gone"/>

    </RelativeLayout>

    <include layout="@layout/network_layout"/>

</LinearLayout>
