<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

	<RelativeLayout
		android:id="@+id/net_disconnect_layout"
		android:layout_width="match_parent"
		android:layout_height="@dimen/y131"
		android:background="@color/diconnect_bg"
		android:visibility="visible">

		<ImageView
			android:id="@+id/disconnect"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/disconnect"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/x74"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/disconnect"
			android:layout_marginLeft="@dimen/x39"
			android:layout_centerVertical="true"
			android:text="@string/disconnect_msg"
			android:textSize="@dimen/x42"
			android:textColor="@color/rob_item_text"/>

	</RelativeLayout>
</RelativeLayout>
