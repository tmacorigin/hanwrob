    <RelativeLayout
        android:layout_below="@+id/linearlayout"
        android:id="@+id/nobegin_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <Button 
            android:id="@+id/upload_pre_image"
            android:layout_width="@dimen/x476"
            android:layout_height="@dimen/y156"
            android:background="@color/common_yellow"
            android:text="@string/upload_pre_img"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/x48"/>
        
        <Button 
            android:id="@+id/upload_end_image"
            android:layout_width="@dimen/x476"
            android:layout_height="@dimen/y156"
            android:visibility="gone"
            android:background="@color/upload_end_construct_btn"
            android:text="@string/upload_end_img"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/x48"/>
        
        <RelativeLayout 
            android:id="@+id/nobegin_layout_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"
            android:paddingLeft="@dimen/x48"
            android:paddingRight="@dimen/x48"
            android:visibility="gone"
            android:layout_centerVertical="true"
            >
            
            <!-- 施工完成 -->
            <Button 
                android:id="@+id/contrust_finish"
                android:layout_width="@dimen/x476"
                android:layout_height="match_parent"
                android:text="@string/task_finish"
                android:textSize="@dimen/x48"
                android:textColor="@color/white"
                android:background="@color/common_yellow"
                style="?android:attr/borderlessButtonStyle"
                />
            
            <!-- 未能完成 -->
            <Button 
                android:id="@+id/contrust_no_finish"
                android:layout_width="@dimen/x476"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="@string/task_nofinish"
                android:textColor="@color/white"
                android:textSize="@dimen/x48"
                android:background="@color/upload_end_construct_btn"
                style="?android:attr/borderlessButtonStyle"
                />
            
        </RelativeLayout>
        
        
        <RelativeLayout 
            android:id="@+id/nobegin_layout_bottom_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"
            android:paddingLeft="@dimen/x48"
            android:paddingRight="@dimen/x48"
            android:visibility="gone"
            android:layout_centerVertical="true"
            >
			
            <!-- 施工图片 -->
            <Button 
                android:id="@+id/contrust_img_btn"
                android:layout_width="@dimen/x476"
                android:layout_height="match_parent"
                android:text="@string/task_finish"
                android:textSize="@dimen/x48"
                android:textColor="@color/white"
                android:background="@color/common_yellow"
                style="?android:attr/borderlessButtonStyle"
                />
            
            <!-- 录音时间 00:28 -->
            <Button 
                android:id="@+id/record_time_btn"
                android:layout_width="@dimen/x476"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/x48"
                android:textColor="@color/white"
                android:background="@color/upload_end_construct_btn"
                style="?android:attr/borderlessButtonStyle"
                />
            
            <!-- 查看原因 -->
            <Button 
                android:id="@+id/check_reason_btn"
                android:layout_width="@dimen/x476"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="@string/check_reason"
                android:textColor="@color/white"
                android:textSize="@dimen/x48"
                android:background="@color/upload_end_construct_btn"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone"
                />
            
